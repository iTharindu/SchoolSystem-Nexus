    #particles-js(ng-class="{'blur-view': showModal, 'particles-semi-transparent': viewIsCreationsOrPress}", style = "height : 150%")
      canvas.particles-js-canvas-el(style='width: 100%; height: 100%;', width='1910', height='2007')
    // ngView:
    .ng-scope(ng-view='', ng-class="{'blur-view': showPlayerView || showModal || showQuoteView}", style='')
      .introduction.ng-scope
    #titles(style = "top:60%;width:100%").ng-scope
      // <canvas id="canvas" class="title-animated" ng-show="loaded"></canvas>
      .signup__container
        //.container__child.signup__thumbnail
        //  .signup__overlay
        .container__child.signup__form
          != messages('message', locals)
          if errors
            each error, i in errors
              div(class="alert alert-danger") #{error.msg}
          form(method='POST', action='/assignments/edit/'+assignment._id)
            .form-group
              label(for='title') Tittle
              input.form-control(type='text', name='title', value = assignment.title, required='')
            .form-group
              label(for='due_date') Due_Date
              span.k-widget.k-datepicker.k-header.form-control(style = "font-family: 'Roboto', sans-serif; color :#fff")
                span.k-picker-wrap.k-state-default
                  input#field3.form-control.k-input(name= 'due_date', type="date", data-role="date", role="textbox", aria-haspopup="true", aria-expanded="false", aria-owns="field3_dateview", aria-disabled="false", aria-readonly="false", aria-label="Current focused date is null", data-error-container="#errfield3", style="width: 100%;", required="required", data-parsley-errors-container="#errId3")
                  span.k-select(unselectable="on", role="button", aria-controls="field3_dateview")
  
                span#errId3.error
            .form-group
              label(for='marks_allocated') Marks Allocated
              input.form-control(type='text', name='marks_allocated', value = assignment.marks_allocated, required='')
            .form-group
              label(for='assignment_type') Assignment Type
              input.form-control(type='text', name='assignment_type', value = assignment.assignment_type, required='')
            .form-group
              label(for='has_to_upload_a_file') Has to Upload a File
              .btn-group.btn-group-toggle(data-toggle='buttons')
                label.btn(style="margin-left:5em").btn-secondary
                  input#option1(type='radio', name='has_to_upload_a_file', value='1', autocomplete='off')
                  | Yes
                label.btn.btn-secondary
                  input#option2(type='radio', name='has_to_upload_a_file', value='2', autocomplete='off')
                  | No  
            .form-group
              label(for='body_assignment') Assignment Details
              textarea.form-control(name = 'body_assignment',rows='8',  required  = '')= assignment.body_assignment
            .m-t-lg
              ul.list-inline
                li
                  input.btn.btn--form(type='submit', value='Save Changes')
    
                    

